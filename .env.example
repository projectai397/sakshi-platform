# Sakshi Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MySQL/TiDB connection string
# Format: mysql://username:password@host:port/database
DATABASE_URL="mysql://sakshi_user:your_password_here@localhost:3306/sakshi_db"

# ============================================
# OAUTH AUTHENTICATION (Manus OAuth)
# ============================================
OAUTH_CLIENT_ID="your_manus_oauth_client_id"
OAUTH_CLIENT_SECRET="your_manus_oauth_client_secret"
OAUTH_REDIRECT_URI="http://localhost:3000/auth/callback"
OAUTH_ISSUER="https://auth.manus.im"

# ============================================
# S3 STORAGE CONFIGURATION
# ============================================
# S3-compatible object storage for images and files
S3_ENDPOINT="https://s3.your-provider.com"
S3_REGION="us-east-1"
S3_BUCKET="sakshi-uploads"
S3_ACCESS_KEY="your_s3_access_key"
S3_SECRET_KEY="your_s3_secret_key"
S3_PUBLIC_URL="https://cdn.sakshi.org"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV="development"
PORT=3000
HOST="localhost"

# Session secret for JWT tokens (generate a random string)
SESSION_SECRET="change_this_to_a_random_secure_string_min_32_chars"

# Application URL
APP_URL="http://localhost:3000"

# ============================================
# OPTIONAL: EMAIL CONFIGURATION
# ============================================
# For sending notifications and receipts
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="Sakshi Platform <noreply@sakshi.org>"

# ============================================
# OPTIONAL: ANALYTICS
# ============================================
GOOGLE_ANALYTICS_ID=""
POSTHOG_API_KEY=""

# ============================================
# OPTIONAL: PAYMENT INTEGRATION
# ============================================
# Razorpay for Indian payments
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""

# Stripe for international payments
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""

# ============================================
# OPTIONAL: AI FEATURES
# ============================================
# For chatbot and smart search
OPENAI_API_KEY=""

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Enable debug logging
DEBUG="false"

# Enable hot reload
HOT_RELOAD="true"

# CORS origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
